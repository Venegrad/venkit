.wrap
    wrap()

.{framework_class_prefix}
    &relative
        position relative
    &overflow
        overflow hidden
    &scroll
        overflow auto
    &vh
        min-height 100vh
    &hidden
        display none
    &block
        display block
    &bgi
        bgp()
        &-left-top
            bgp left top
        &-right-top
            bgp right top
        &-center-top
            bgp center top
        &-left-center
            bgp left center
        &-right-center
            bgp right center
        &-left-bottom
            bgp left bottom
        &-right-bottom
            bgp right bottom
        &-center-bottom
            bgp center bottom
        &-contain
            background-size contain

// Custom classes
.{framework_class_prefix}text
    &-center
        text-align center
    &-left
        text-align left
    &-right
        text-align right
    &-nowrap
        white-space nowrap
    &-upper
        text-transform uppercase
    &-light
        font-weight: 300
    &-regular
        font-weight: 400
    &-middle
        font-weight: 500
    &-semibold
        font-weight: 600
    &-bold, &-strong
        font-weight: 700
    &-black
        font-weight: 900


// Media for classes
if grid_bpoint is defined && grid_bpoint
    for index, key in grid_bpoint
        @media(max-width (key)px)
            .{framework_class_prefix}text
                &-center--{index}{grid_default_class}
                    text-align center
                &-left--{index}{grid_default_class}
                    text-align left
                &-right--{index}{grid_default_class}
                    text-align right

            .{framework_class_prefix}hide
                &--{index}{grid_default_class}
                    display none
            
    for index, key in invert_hash(grid_bpoint)
        @media(min-width (key + 1)px)
            .{framework_class_prefix}text
                &-center--{index}{grid_inverted_class}
                    text-align center
                &-left--{index}{grid_inverted_class}
                    text-align left
                &-right--{index}{grid_inverted_class}
                    text-align right

            .{framework_class_prefix}hide
                &--{index}{grid_inverted_class}
                    display none